#include "software_timer.h"
#define TICK 10

int timer_flag1 = 0;
int timer_cnt1 = 0;

void setTimer1(int duration){
	timer_cnt = duration/TICK;
	timer_flag = 0;
}

void timerRun(){
	if(timer_cnt>0){
		timer_cnt--;
		if(timer_cnt<=0){
			timer_flag = 1;
		}
	}
}
