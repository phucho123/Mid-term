#include "main.h"
#include "fsm_automatic.h"
#include "display_7segment.h"


int t = 9;

void fsm_automatic_run(){
	switch(status){
		case INIT:
			setTimer1(1000);
			status = MODE0;
			break;
		case MODE0:
			if(timer_flag1){
				setTimer1(1000);
				if(t > 0) t--;
			}
			display(h,m,s);
			if(button_flag[0] == 1){
				button_flag[0] = 0;
				status = MODE1;
				GPIOA->ODR = 0xffff;
				setTimer2(5000);
			}
			break;
		case MODE1:
			if(timer_flag2){
				status = INIT;
			}
			if(button_flag[0]){
				button_flag[0] = 0;
				status = MODE2;
			}
			if(button_flag[1]){
				button_flag[1] = 0;
				h = (h+12+1)%12;
				setTimer2(5000);
			}
			if(button_flag[2]){
				button_flag[2] = 0;
				h = (h+12-1)%12;
				setTimer2(5000);
			}
			display(h,h,h);
			break;
		case MODE2:
			if(timer_flag2){
				status = INIT;
			}
			if(button_flag[0]){
				button_flag[0] = 0;
				status = INIT;
				setTimer2(5000);
			}
			if(button_flag[1]){
				button_flag[1] = 0;
				m = (m+12+1)%12;
				setTimer2(5000);
			}
			if(button_flag[2]){
				button_flag[2] = 0;
				m = (m+12-1)%12;
				setTimer2(5000);
			}
			display(m,m,m);
			break;
		default:
			break;
	}
}
